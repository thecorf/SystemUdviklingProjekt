@page "/Books/Create"
@model CreateBookModel
@{
    ViewData["Title"] = "Opret bog";
}

<h1>Opret bog</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Title" class="form-label"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Author" class="form-label"></label>
        <input asp-for="Input.Author" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ImageUrl" class="form-label"></label>
        <input asp-for="Input.ImageUrl" class="form-control" />
        <div class="form-text">Valgfrit – direkte URL til billede.</div>
    </div>
    <button type="submit" class="btn btn-primary">Gem</button>
    <a asp-page="/AvailableBooks" class="btn btn-secondary">Annullér</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
