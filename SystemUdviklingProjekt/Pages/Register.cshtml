@page
@model SystemUdviklingProjekt.Pages.RegisterModel
@{
    // Sets the page title and hides the navigation bar for the registration page
    ViewData["Title"] = "Opret bruger";
    ViewData["ShowNavbar"] = false;
}

<h2 class="mb-3">Opret bruger</h2>

@* Displays a warning message if the Model.Message property is not empty *@
@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-warning">@Model.Message</div>
}

<form method="post" class="row g-3">
    @* Username input field *@
    <div class="col-md-6">
        <label asp-for="Username" class="form-label">Brugernavn</label>
        <input asp-for="Username" class="form-control" />
    </div>
    @* Password input field *@
    <div class="col-md-6">
        <label asp-for="Password" class="form-label">Adgangskode</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    @* Name input field *@
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Navn</label>
        <input asp-for="Name" class="form-control" />
    </div>
    @* Phone input field *@
    <div class="col-md-6">
        <label asp-for="Phone" class="form-label">Telefon</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    @* Email input field *@
    <div class="col-md-6">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    @* Zip code input field *@
    <div class="col-md-3">
        <label asp-for="ZipCode" class="form-label">Postnummer</label>
        <input asp-for="ZipCode" type="number" min="0" class="form-control" />
    </div>
    @* Administrator checkbox *@
    <div class="col-md-3 d-flex align-items-end">
        <div class="form-check">
            <input asp-for="isadministrator" class="form-check-input" type="checkbox" id="isadmin" />
            <label class="form-check-label" for="isadmin">Administrator</label>
        </div>
    </div>

    @* Description textarea field *@
    <div class="col-12">
        <label asp-for="Description" class="form-label">Beskrivelse</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    @* Submit button and link to login page *@
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Opret</button>
        <a asp-page="/Login" class="btn btn-link">Allerede bruger? Log ind</a>
    </div>
</form>
