@page
@model SystemUdviklingProjekt.Pages.AvailableBooksModel
@{
    ViewData["Title"] = "Ledige bøger";
}

<h1 class="mb-3">Ledige bøger</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        @if (TempData["Message"] is string msg)
        {
            <div class="alert alert-info mb-0">@msg</div>
        }
    </div>
    <a class="btn btn-primary" asp-page="/Books/Create">Opret bog</a>
</div>

@if (!Model.Books.Any(b => b.IsAvailable))
{
    <p>Ingen ledige bøger lige nu.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-3">
    @foreach (var b in Model.Books.Where(x => x.IsAvailable))
    {
        <div class="col">
            <div class="card h-100">
                @if (!string.IsNullOrWhiteSpace(b.ImageUrl))
                {
                    <img class="card-img-top" src="@b.ImageUrl" alt="@b.Title" />
                }
                <div class="card-body">
                    <h5 class="card-title">@b.Title</h5>
                    <p class="card-text"><em>@b.Author</em></p>
                    @if (!string.IsNullOrWhiteSpace(b.Description))
                    {
                        <p class="card-text">@b.Description</p>
                    }
                </div>
                <div class="card-footer bg-white">
                    @if (Model.IsLoggedIn)
                    {
                        <form method="post" asp-page-handler="Rent" class="d-inline">
                            <input type="hidden" name="id" value="@b.Id" />
                            <button class="btn btn-success">Lej</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-secondary disabled" aria-disabled="true">Log ind for at leje</a>
                        <a class="btn btn-link" asp-page="/Login">Log ind</a>
                    }
                </div>
            </div>
        </div>
    }
    </div>
}
